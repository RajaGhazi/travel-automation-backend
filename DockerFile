FROM python:3.11-slim

# Install OS libraries required by Playwright/Chromium
RUN apt-get update && \
    apt-get install -y wget gnupg2 libgtk-3-0 libnss3 libasound2 libatk1.0-0 libatk-bridge2.0-0 libcups2 libdbus-1-3 libgdk-pixbuf2.0-0 libnspr4 libx11-xcb1 libxcomposite1 libxdamage1 libxfixes3 libxrandr2 libxrender1 libgbm1 libxss1 libxtst6 fonts-liberation libappindicator3-1 libatspi2.0-0 libdrm2 libpango-1.0-0 libwayland-client0 libwayland-cursor0 libwayland-egl1 libxkbcommon0 && \
    rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --upgrade pip
RUN pip install -r requirements.txt

# Install Playwright browsers
RUN playwright install

# Copy app files
COPY . .

# Expose port (matches your app.py)
EXPOSE 10000

# Run the app using Gunicorn
CMD ["gunicorn", "app:app", "--bind", "0.0.0.0:10000"]